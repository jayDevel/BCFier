<?xml version="1.0" encoding="utf-8"?>
<!-- 
Note this nuspec is only for deployment to the XbimPlugin myget Repository 
This project does not provide APIs for other applications to consume, so it's not suitabe for Nuget.org
-->
<package xmlns="http://schemas.microsoft.com/packaging/2011/10/nuspec.xsd">
  <metadata>
    <id>Bcfier.XbimXplorer</id>
    <version>4.0.1-V0001</version>
    <title>Bcfier.XbimXplorer</title>
    <authors>Claudio Benghi, Matteo Cominetti</authors>
    <owners>Claudio Benghi, Matteo Cominetti</owners>
    <licenseUrl>https://raw.githubusercontent.com/CBenghi/BCFier/blob/master/LICENSE</licenseUrl>
    <projectUrl>http://bcfier.com/</projectUrl>
    <iconUrl>https://raw.githubusercontent.com/teocomi/BCFier/master/Bcfier/Assets/BCFierIcon64x64.png</iconUrl>
    <requireLicenseAcceptance>true</requireLicenseAcceptance>
    <description>Integration of Matteo Cominetti's BCFier editor of BuildingSmart's BCF.</description>
    <summary>.</summary>
    <language>en-GB</language>
    <!-- the XplorerPlugin tag is used to identify plugins available for donwload from XbimXplorer-->
    <tags>BCF, Building Collaboration Format, BuildingSmart, XplorerPlugin</tags>
    <!-- dependencies need to be worked out, at this stage they will be ignored during install in Xbim-->
    <dependencies>
      <dependency id="Xbim.WindowsUI" version="4.0.11" />
    </dependencies>
  </metadata>
  <files>
    <file src="bin\Release\Bcfier.XbimXplorer.exe"     target="lib\net45\" />
    <file src="bin\Release\RestSharp.dll"              target="lib\net45\" />
    <file src="bin\Release\Bcfier.dll"                 target="lib\net45\" />
  </files>
</package>
